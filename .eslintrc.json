{
  "env": {
    "es2021": true,
    "node": true,
    "react-native/react-native": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "airbnb/hooks", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "react-native"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    /* "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }] */
    "import/extensions": [
      "error",
      "never"
    ] /* Esta configuración generará un error si no se utiliza una extensión en cualquier declaración de importación, excepto en las importaciones de paquetes. */,
    "import/prefer-default-export": "off",
    "react/prop-types": "off"
  }
}
